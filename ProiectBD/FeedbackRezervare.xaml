<Page x:Class="ProiectBD.FeedbackRezervare"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProiectBD"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FeedbackRezervare">

    <Grid>
        <StackPanel Margin="20">
            <Label Content="Id rezervare:"/>
            <TextBox x:Name="txtIdRezervare"/>

            <Label Content="Id persoana:"/>
            <TextBox x:Name="txtIdPersoana"/>
            
            <Label Content="Feedback(0-5):"/>
            <TextBox x:Name="txtFeedback"/>

            <Button x:Name ="feedbackButton" Content="Adaugă Feedback" Click="feedbackButton_click"  />
        </StackPanel>
    </Grid>
</Page>
