<Page x:Class="ProiectBD.AnulareModificareProgramare"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProiectBD"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AnulareModificareProgramare">

    <Grid>
        <StackPanel Margin="20">
            <Label Content="Id-ul programării:"/>
            <TextBox x:Name="txtId"/>
            
            <Label Content="Data actualizata a programării:"/>
            <DatePicker x:Name="datePickerRezervare"/>

            <Label/>
            <Button x:Name ="actualizareButton" Content="Actualizeaza Programarea" Click="actualizareButton_Click" />
            <Label/>
            <Button x:Name ="anulareButton" Content="Anuleaza Programarea" Click="anulareButton_Click" />
        </StackPanel>
    </Grid>
</Page>
